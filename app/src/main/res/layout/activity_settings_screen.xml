<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.peak.mixen.Activities.SettingsScreen"
    android:background="@color/Outer_Space">

    <TextView android:text="@string/settings" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="@color/Snow_White"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/settings_label" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enabled experimental AMOLED support."
        android:id="@+id/enable_amoled"
        android:layout_below="@+id/settings_label"
        android:layout_alignLeft="@+id/settings_label"
        android:layout_alignStart="@+id/settings_label"
        android:layout_marginTop="50dp"
        android:textColor="@color/Snow_White"
        android:buttonTint="@color/Snow_White"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some of the settings here are experimental and may require a restart of the app."
        android:id="@+id/warning_label"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Snow_White"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Username"
        android:id="@+id/reset_username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset All Settings"
        android:id="@+id/reset_app"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/reset_username"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restrict all submissions to clean songs only."
        android:id="@+id/enable_clean_only"
        android:textColor="@color/Snow_White"
        android:alpha="0.5"
        android:layout_below="@+id/enable_amoled"
        android:layout_alignLeft="@+id/enable_amoled"
        android:layout_alignStart="@+id/enable_amoled"
        android:layout_marginTop="10dp"
        android:buttonTint="@color/Snow_White" />

</RelativeLayout>
