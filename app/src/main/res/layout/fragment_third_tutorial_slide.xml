<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.peak.mixen.Fragments.SecondTutorialSlide"
    android:background="@color/Tundora">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding Songs"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@color/Snow_White"
        android:textSize="36dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap a single song to add it or plus for the album."
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="110dp"
        android:textColor="@color/Snow_White"
        android:textSize="18dp"
        android:gravity="center" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="520dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center"
        android:src="@drawable/tutorial3"
        android:layout_marginTop="145dp" />

</FrameLayout>
