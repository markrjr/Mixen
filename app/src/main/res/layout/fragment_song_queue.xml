
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.peak.mixen.SongQueueFrag"
    android:id="@+id/relativeLayout"
    android:background="@color/Dark_Primary">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/queueLV"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_alignParentStart="false"
        android:background="@color/Dark_Primary" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_action_add"
        fab:fab_colorNormal="@color/Accent_Color"
        fab:fab_colorPressed="@color/Accent_Color"
        fab:fab_colorRipple="@color/Snow_White"
        android:visibility="visible"
        android:layout_alignBottom="@+id/queueLV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:scaleType="center"
        android:nestedScrollingEnabled="false"
        android:background="#2196F3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/empty_queue"
        android:id="@+id/infoTV"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Snow_White"
        android:textSize="40dp"
        android:visibility="visible"
        android:gravity="center"
        android:background="@color/Dark_Primary" />


</RelativeLayout>



