<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.peak.mixen.Fragments.SecondTutorialSlide"
    android:background="@color/Dodger_Blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to mix it up?"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:layout_marginTop="175dp"
        android:textColor="@color/Snow_White"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/google_plus_link"
        android:layout_gravity="center"
        android:src="@drawable/google_plus"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get them taken care of on our Google Plus page."
        android:id="@+id/textView8"
        android:layout_gravity="center"
        android:textColor="@color/Snow_White"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions, comments, hopes, wishes?"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@color/Snow_White"
        android:textSize="36dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:gravity="center" />

</FrameLayout>
