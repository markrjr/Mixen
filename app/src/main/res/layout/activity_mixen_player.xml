<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.peak.mixen.MixenPlayer"
    android:background="@color/Snow_White"
    android:id="@+id/baseLayout"
    android:visibility="visible">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bufferingPB"
        android:indeterminateOnly="true"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_above="@+id/titleTV"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/albumArtIV"
        android:src="@drawable/nmh_cover"
        android:layout_marginBottom="180dp"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:textSize="16dp"
        android:textColor="@color/Snow_White"
        android:visibility="visible"
        android:background="@color/Jacksons_Purple"
        android:text="Ghost"
        android:paddingTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="5dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/albumArtIV"
        android:layout_alignStart="@+id/albumArtIV"
        android:layout_toStartOf="@+id/currentMusicBtn"
        android:layout_alignRight="@+id/currentMusicBtn"
        android:layout_alignEnd="@+id/currentMusicBtn"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/artistTV"
        android:textColor="@color/Snow_White"
        android:textAlignment="gravity"
        android:visibility="visible"
        android:background="@color/Jacksons_Purple"
        android:text="Neutral Milk Hotel"
        android:textIsSelectable="false"
        android:textSize="14dp"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/titleTV"
        android:layout_alignLeft="@+id/titleTV"
        android:layout_alignStart="@+id/titleTV"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp" />


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/usersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/people"
        fab:fab_colorNormal="@color/Material_Blue"
        fab:fab_colorPressed="@color/Jacksons_Purple"
        fab:fab_colorRipple="@color/Snow_White"
        android:onClick="onBtnClicked"
        android:visibility="visible"
        android:layout_alignBottom="@+id/titleTV"
        android:layout_alignLeft="@+id/albumArtIV"
        android:layout_alignStart="@+id/albumArtIV"
        android:layout_marginBottom="36dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/currentMusicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music"
        fab:fab_colorNormal="@color/Material_Blue"
        fab:fab_colorPressed="@color/Jacksons_Purple"
        fab:fab_colorRipple="@color/Snow_White"
        android:onClick="onBtnClicked"
        android:visibility="visible"
        android:layout_alignTop="@+id/usersBtn"
        android:layout_alignRight="@+id/albumArtIV"
        android:layout_alignEnd="@+id/albumArtIV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:53 | 3:30"
        android:id="@+id/textView2"
        android:visibility="visible"
        android:textColor="@color/Snow_White"
        android:layout_alignBottom="@+id/artistTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="20dp"
        android:paddingBottom="30dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Valencia"
        android:id="@+id/playerControls"
        android:visibility="visible"
        android:layout_below="@+id/artistTV"
        android:layout_alignRight="@+id/currentMusicBtn"
        android:layout_alignEnd="@+id/currentMusicBtn"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/rewindIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="visible"
            android:background="@color/Valencia"
            android:src="@drawable/rewind"
            android:scaleType="center"
            android:layout_alignTop="@+id/playPauseButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp" />

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Valencia"
            android:text="Button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/fastForwardIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Valencia"
            android:text="Button"
            android:clickable="true"
            android:visibility="visible"
            android:src="@drawable/fast_foward"
            android:layout_alignTop="@+id/playPauseButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="34dp" />
    </RelativeLayout>


</RelativeLayout>
