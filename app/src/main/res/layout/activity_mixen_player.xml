<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.peak.mixen.MixenPlayer"
    android:background="@color/Snow_White"
    android:id="@+id/baseLayout"
    android:visibility="visible">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/albumArtIV"
        android:layout_marginBottom="180dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:textSize="24dp"
        android:textColor="@color/Snow_White"
        android:visibility="visible"
        android:background="@color/Niagara"
        android:paddingTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/albumArtIV"
        android:layout_alignStart="@+id/albumArtIV"
        android:layout_toStartOf="@+id/currentMusicBtn"
        android:layout_alignRight="@+id/currentMusicBtn"
        android:layout_alignEnd="@+id/currentMusicBtn"
        android:paddingLeft="20dp"
        android:textIsSelectable="false"
        android:paddingBottom="10dp"
        android:text="Song Name" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/artistTV"
        android:textColor="@color/Snow_White"
        android:textAlignment="gravity"
        android:visibility="visible"
        android:background="@color/Niagara"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/titleTV"
        android:layout_alignLeft="@+id/titleTV"
        android:layout_alignStart="@+id/titleTV"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:text="Artist"
        android:gravity="left" />


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/usersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/people"
        fab:fab_colorNormal="@color/Jacksons_Purple"
        fab:fab_colorPressed="@color/Material_Blue"
        fab:fab_colorRipple="@color/Snow_White"
        android:onClick="onBtnClicked"
        android:visibility="visible"
        android:layout_alignBottom="@+id/titleTV"
        android:layout_alignStart="@+id/albumArtIV"
        android:layout_marginBottom="42dp" />


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/currentMusicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/Jacksons_Purple"
        fab:fab_colorPressed="@color/Material_Blue"
        fab:fab_colorRipple="@color/Snow_White"
        android:onClick="onBtnClicked"
        android:visibility="visible"
        android:layout_alignEnd="@+id/albumArtIV"
        android:src="@drawable/music"
        android:layout_alignBottom="@+id/titleTV"
        android:layout_marginBottom="42dp"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:53 | 3:30"
        android:id="@+id/songProgressTV"
        android:visibility="invisible"
        android:textColor="@color/Snow_White"
        android:layout_marginRight="20dp"
        android:background="@color/Niagara"
        android:layout_below="@+id/usersBtn"
        android:layout_alignEnd="@+id/currentMusicBtn"
        android:textSize="16dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upNextTV"
        android:textColor="@color/Snow_White"
        android:paddingLeft="20dp"
        android:background="@color/Niagara"
        android:layout_below="@+id/songProgressTV"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp"
        android:paddingTop="10dp"
        android:visibility="visible"
        android:text="Up Next: Song Name" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Jacksons_Purple"
        android:id="@+id/playerControls"
        android:visibility="visible"
        android:layout_below="@+id/artistTV"
        android:layout_alignRight="@+id/currentMusicBtn"
        android:layout_alignEnd="@+id/currentMusicBtn"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:layout_marginTop="40dp">


        <ImageButton
            android:id="@+id/rewindIB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Button"
            android:visibility="visible"
            android:background="@color/Jacksons_Purple"
            android:src="@drawable/rewind"
            android:layout_marginStart="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            android:onClick="onBtnClicked" />

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/Jacksons_Purple"
            android:text="Button"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/play"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:onClick="onBtnClicked" />

        <ImageButton
            android:id="@+id/fastForwardIB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/Jacksons_Purple"
            android:text="Button"
            android:clickable="true"
            android:visibility="visible"
            android:src="@drawable/fast_forward"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:scaleType="fitCenter"
            android:onClick="onBtnClicked"
            android:layout_marginTop="5dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bufferingPB"
            android:indeterminateOnly="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="2dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genericImageArt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:visibility="gone" />


</RelativeLayout>
