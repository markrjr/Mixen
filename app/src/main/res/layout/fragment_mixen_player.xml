<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Snow_White"
    android:visibility="visible"
    tools:context="com.peak.mixen.MixenPlayerFrag">


    <ImageView
        android:id="@+id/albumArtIV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="180dp"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/albumArtIV"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/albumArtIV"
        android:layout_marginBottom="120dp"
        android:background="@color/Accent_Color"
        android:paddingLeft="20dp"
        android:text="Song Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Snow_White"
        android:textIsSelectable="false"
        android:textSize="24dp"
        android:visibility="visible"
        android:layout_alignEnd="@+id/albumArtIV"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/artistTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleTV"
        android:layout_alignStart="@+id/titleTV"
        android:layout_alignTop="@+id/titleTV"
        android:layout_marginTop="50dp"
        android:background="@color/Accent_Color"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="Artist"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Snow_White"
        android:textIsSelectable="false"
        android:textSize="16dp"
        android:visibility="visible"
        android:paddingBottom="30dp" />


    <TextView
        android:id="@+id/songProgressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="#1976D2"
        android:text="2:53 | 3:30"
        android:textColor="@color/Snow_White"
        android:textSize="16dp"
        android:visibility="invisible"
        android:layout_alignEnd="@+id/albumArtIV" />

    <TextView
        android:id="@+id/upNextTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Accent_Color"
        android:text="Up Next: Song Name"
        android:textColor="@color/Snow_White"
        android:visibility="visible"
        android:layout_below="@+id/artistTV"
        android:layout_toRightOf="@+id/genericImageArt"
        android:layout_toEndOf="@+id/genericImageArt"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp" />

    <RelativeLayout
        android:id="@+id/playerControls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/artistTV"
        android:layout_marginTop="30dp"
        android:background="@color/Dark_Primary"
        android:visibility="visible"
        android:layout_alignEnd="@+id/albumArtIV">


        <ImageButton
            android:id="@+id/rewindIB"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/Dark_Primary"
            android:scaleType="fitCenter"
            android:src="@drawable/rewind"
            android:text="Button"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/Dark_Primary"
            android:paddingLeft="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/play"
            android:text="Button"
            android:visibility="visible"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/fastForwardIB"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/Dark_Primary"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fast_forward"
            android:text="Button"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <ProgressBar
            android:id="@+id/bufferingPB"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:paddingLeft="2dp"
            android:visibility="gone"
            android:background="@color/Dark_Primary"
            android:indeterminateTint="@color/Snow_White" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/genericImageArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:visibility="gone" />


</RelativeLayout>
