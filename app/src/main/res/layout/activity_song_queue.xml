<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.peak.mixen.SongQueue"
    android:id="@+id/relativeLayout">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/queueLV"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_alignParentStart="false"
        android:paddingBottom="80dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_action_add"
        fab:fab_colorNormal="@color/Material_Blue"
        fab:fab_colorPressed="@color/Jacksons_Purple"
        fab:fab_colorRipple="@color/Snow_White"
        android:visibility="visible"
        android:onClick="onBtnClicked"
        android:layout_alignBottom="@+id/queueLV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:scaleType="center" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/musicPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/music"
        fab:fab_colorNormal="@color/Material_Blue"
        fab:fab_colorPressed="@color/Jacksons_Purple"
        fab:fab_colorRipple="@color/Snow_White"
        android:visibility="visible"
        android:onClick="onBtnClicked"
        android:scaleType="center"
        android:layout_alignTop="@+id/fab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/empty_queue"
        android:id="@+id/infoTV"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Silver_Sand"
        android:textSize="40dp"
        android:visibility="gone"
        android:gravity="center" />


</RelativeLayout>


